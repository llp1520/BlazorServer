@page "/"
@page "/index"
@attribute [Authorize]
@using BlazorServer.Model;
@using BlazorServer.Services;

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>
<AuthorizeView>
    <Authorized>
        验证通过，登录成功<br />
        用户名:@context.User.Identity.Name
    </Authorized>
    <NotAuthorized>
        验证失败，<a href="/login">点击登录</a>
    </NotAuthorized>
</AuthorizeView>

